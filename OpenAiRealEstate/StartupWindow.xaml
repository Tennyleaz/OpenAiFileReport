<Window x:Class="OpenAiFileReport.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAiFileReport"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="OpenAI Chat Completion Demo" Height="400" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Name="btnFileSearch" Click="BtnFileSearch_OnClick" Height="30" Margin="20,20,20,0">Search files using RAG</Button>
            <Button Name="btnReport" Click="BtnReport_OnClick" Height="30" Margin="20,20,20,0">Generate report from audio file and template</Button>
        </StackPanel>
    </Grid>
</Window>
